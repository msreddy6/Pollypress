<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">

        <!-- Header with hamburger and logo -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="#ADD8E6">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu_24dp"
                android:contentDescription="Menu Icon" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:src="@drawable/pplogo1bg"
                android:contentDescription="Pollypress Logo" />
        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_below="@id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Unapproved Articles -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“° Unapproved Articles"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#3F51B5"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAdminArticles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp" />

                <!-- Pending Polls -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Pending Polls"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#009688"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAdminPolls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Tickets Button -->
                <Button
                    android:id="@+id/btnAdminTickets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tickets"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- Navigation Drawer (Profile Info + Logout) -->
    <LinearLayout
        android:id="@+id/navigationDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:background="@drawable/profile"
            android:scaleType="centerCrop"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Admin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#CCCCCC" />

        <Button
            android:id="@+id/btnShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share App" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF0000"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
