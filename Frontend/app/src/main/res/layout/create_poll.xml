<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="🗳️ Create New Poll"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPollTitle"
            android:hint="Poll Title"
            android:background="@drawable/rounded_white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPollDescription"
            android:hint="Poll Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:background="@drawable/rounded_white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPollOptions"
            android:hint="Enter options separated by commas"
            android:background="@drawable/rounded_white"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSubmitPoll"
            android:text="Submit Poll"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- success message for test -->
        <TextView
            android:id="@+id/tvSuccess"
            android:text="Poll created successfully"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
