<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">

        <!-- HEADER (unchanged) -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="#ADD8E6">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu_24dp"
                android:contentDescription="Menu Icon" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:src="@drawable/pplogo1bg"
                android:contentDescription="Pollypress Logo" />
        </LinearLayout>

        <!-- SCROLLABLE CONTENT -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerLayout"
            android:layout_above="@+id/bottomNav"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SEARCH BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/search_background"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Search articles..."
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:drawableStart="@android:drawable/ic_menu_search"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search" />
                </LinearLayout>

                <!-- ARTICLES HEADER + CREATE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Articles"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btnCreateArticle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Article"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewReporterArticles"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:paddingBottom="16dp" />

                <!-- POLLS HEADER + CREATE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Polls"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btnCreatePoll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Poll"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewReporterPolls"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:paddingBottom="16dp" />

            </LinearLayout>
        </ScrollView>

        <!-- BOTTOM NAV -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:gravity="center">

            <Button
                android:id="@+id/btnNavArticles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Articles"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnNavPolls"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Polls"
                android:backgroundTint="#CCCCCC"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- CHAT FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMyTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/bottomNav"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_chat_24dp"
            app:backgroundTint="@color/teal_700"
            app:tint="@android:color/white"
            android:contentDescription="Chat" />

    </RelativeLayout>

    <!-- NAV DRAWER (unchanged) -->
    <LinearLayout
        android:id="@+id/navigationDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">
        <!-- … your drawer items … -->
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
