<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pollypress"
        tools:targetApi="34">

        <!-- Existing Activities -->
        <activity android:name=".auth.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.SignupActivity" android:exported="false" />
        <activity android:name=".auth.ForgotPasswordActivity" android:exported="false" />

        <!-- NEW: In‐app reset password via deep link -->
        <activity
            android:name=".auth.ResetPasswordActivity"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- production host -->
                <data
                    android:scheme="http"
                    android:host="coms-3090-003.class.las.iastate.edu"
                    android:pathPrefix="/newsusers/resetPassword" />

                <!-- local dev -->
                <data
                    android:scheme="http"
                    android:host="localhost"
                    android:pathPrefix="/newsusers/resetPassword" />
            </intent-filter>
        </activity>

        <!-- Dashboard Activities -->
        <activity android:name=".dashboards.AdminDashboardActivity" android:exported="false" />
        <activity android:name=".dashboards.ReporterDashboardActivity" android:exported="false" />
        <activity android:name=".content.CreateArticleActivity" android:exported="false" />
        <activity android:name=".content.EditArticleActivity" android:exported="false" />
        <activity android:name=".dashboards.NewsUserDashboardActivity" android:exported="false" />
        <activity android:name=".dashboards.NewsUserProfileActivity" android:exported="false" />
        <activity android:name=".dashboards.ReporterProfileActivity" android:exported="false" />

        <!-- New Poll Activities -->
        <activity android:name=".content.CreatePollActivity" android:exported="false" />
        <activity android:name=".content.EditPollActivity" android:exported="false" />

        <activity android:name=".dashboards.ReporterTicketsActivity"    android:exported="false"/>
        <activity android:name=".dashboards.NewTicketActivity"          android:exported="false"/>
        <activity android:name=".dashboards.TicketChatActivity"         android:exported="false"/>
        <activity android:name=".dashboards.AdminTicketsActivity"       android:exported="false"/>

    </application>
</manifest>
